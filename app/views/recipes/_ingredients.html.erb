
<%= form_for @recipe do |f| %>
  Ingredient: <%= f.collection_select :ingredient_name, Ingredient.all, :id, :name %>
  <%=f.submit "Add Ingredient"%>
<% end %>

<br></br>

<% @recipe.ingredients.each do |ingredient| %>
  Name: <%= ingredient.name %> | Quantity: <%= ingredient.quantity %> | <%=link_to "Delete Ingredient", recipe_ingredient_path(@recipe, ingredient) ,method: :delete, :confirm => "Are you sure you want to delete this ingredient" %> | <%= link_to "Edit", edit_recipe_ingredient_path(@recipe, ingredient) %>
  <br></br>
  <% end %>