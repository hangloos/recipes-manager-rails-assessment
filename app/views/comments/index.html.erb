<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Rating</th>
      <th>Comments</th>
      <th>Recipe</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipe.comments.each do |comment| %>
      <tr>
        <td><%= comment.rating %></td>
        <td><%= comment.comments %></td>
        <td><%= comment.recipe_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_recipe_comment_path(@recipe) %>
